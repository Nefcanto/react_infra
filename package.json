{
    "referencesComment": {
        "versioningSyntax": {
            "reference": "https://github.com/npm/node-semver#versions",
            "only": "use exact version"
        },
        "prebuild-and-postbuild": {
            "reference": "https://docs.npmjs.com/cli/v7/using-npm/scripts#life-cycle-scripts",
            "use": "to automate some stuff"
        },
        "engine": {
            "reference": "https://docs.npmjs.com/cli/v7/configuring-npm/package-json#engines",
            "specify": "exact version to enforce version compatibility across holding developers"
        },
        "reuseAndReduce": {
            "nodeModules": "https://docs.npmjs.com/cli/v7/using-npm/workspaces"
        },
        "eject": {
            "for": "full customization using Webpack, Babel, ESLint, etc."
        },
        "run": {
            "on": "subdomain.domain.local",
            "atPort": "80",
            "preferrablyUsing": "HTTPS",
            "from": "https://create-react-app.dev/docs/using-https-in-development"
        },
        "test": {
            "globally": "just like database centralized tests"
        },
        "support": {
            "olderBrowsers": "using polyfills",
            "at": "https://github.com/facebook/create-react-app/blob/master/packages/react-app-polyfill/README.md"
        },
        "route": {
            "via": "https://reactrouter.com/"
        }
    },
    "private": true,
    "dependencies": {
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-router-dom": "5.2.0",
        "react-scripts": "4.0.3",
        "web-vitals": "1.1.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
